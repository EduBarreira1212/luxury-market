generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id          String        @id @default(uuid())
  email       String        @unique
  adress      String
  phoneNumber String
  about       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  cars        Car[]
  motorcycles Motorcycles[]
}

model Buyer {
  id          String   @id @default(uuid())
  email       String   @unique
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Car {
  id        String    @id @default(uuid())
  userId    String
  model     String
  brand     String
  year      Int
  mileage   Int
  condition Condition
  price     Float
  fuel      FuelType
  gearbox   Gearbox
  about     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  seller    Seller    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Motorcycles {
  id        String    @id @default(uuid())
  userId    String
  model     String
  brand     String
  year      Int
  mileage   Int
  condition Condition
  price     Float
  cc        Int
  about     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  seller    Seller    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum FuelType {
  GASOLINE
  ETHANOL
  FLEX
  DIESEL
  ELECTRIC
  HYBRID
}

enum Condition {
  NEW
  USED
}

enum Gearbox {
  MANUAL
  AUTOMATIC
}
