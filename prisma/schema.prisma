generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Car {
  id        String    @id @default(uuid())
  userId    String
  model     String
  brand     String
  year      Int
  mileage   Int
  condition Condition
  price     Float
  fuel      FuelType
  gearbox   Gearbox
  about     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum FuelType {
  GASOLINE
  ETHANOL
  FLEX
  DIESEL
  ELECTRIC
  HYBRID
}

enum Condition {
  NEW
  USED
}

enum Gearbox {
  MANUAL
  AUTOMATIC
}
